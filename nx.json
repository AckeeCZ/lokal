{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "check",
          "build",
          "copy:templates",
          "lint",
          "test"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/lib"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "copy:templates": {
      "outputs": ["{projectRoot}/lib/templates"]
    }
  }
}
